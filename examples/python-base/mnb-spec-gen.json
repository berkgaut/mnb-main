{
  "spec_version": "1.0",
  "actions": [
    {"build_image": {
      "image_name": "bberkgaut/mnb-spec-python",
      "context_path": ".",
      "dockerfile_path": "containers/mnb-spec-python/Dockerfile"
    }},
    {"exec": {
      "image_name": "bberkgaut/mnb-spec-python",
      "command": ["python3", "examples/python-base/mnb-spec.py"],
      "workdir": "context",
      "inputs": [{"value": {"dir": {"path": "."}}, "through": {"dir": {"path": "context"}}}]
    }}
  ]
}
