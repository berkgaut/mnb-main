{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://purl.org/mnbproject/spec/0.1/schema",
  "type": "object",
  "required": [
    "spec_version",
    "actions"
  ],
  "properties": {
    "spec_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "actions": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "pull_image": {
                "type": "object",
                "properties": {
                  "image_name": {
                    "type": "string"
                  }
                },
                "required": [
                  "image_name"
                ]
              }
            },
            "required": [
              "pull_image"
            ]
          },
          {
            "type": "object",
            "properties": {
              "build_image": {
                "type": "object",
                "properties": {
                  "dockerfile_path": {
                    "type": "string"
                  },
                  "context_dir": {
                    "type": "string"
                  },
                  "build_args": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "value": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "name",
                        "value"
                      ]
                    }
                  }
                },
                "required": [
                  "context_dir"
                ]
              }
            },
            "required": [
              "build_image"
            ]
          },
          {
            "type": "object",
            "required": [
              "exec"
            ],
            "properties": {
              "exec": {
                "type": "object",
                "required": [
                  "image_name"
                ],
                "properties": {
                  "image_name": {
                    "type": "string"
                  },
                  "command": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "entrypoint": {
                    "type": "string"
                  },
                  "inputs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "value",
                        "through"
                      ],
                      "properties": {
                        "value": {
                          "$ref": "#/definitions/value"
                        },
                        "through": {
                          "oneOf": [
                            {
                              "$ref": "#/definitions/through_file"
                            },
                            {
                              "$ref": "#/definitions/through_environment"
                            },
                            {
                              "$ref": "#/definitions/through_input_stream"
                            },
                            {
                              "$ref": "#/definitions/through_dir"
                            }
                          ]
                        }
                      }
                    }
                  },
                  "outputs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "value",
                        "through"
                      ],
                      "properties": {
                        "value": {
                          "$ref": "#/definitions/value"
                        },
                        "through": {
                          "oneOf": [
                            {
                              "$ref": "#/definitions/through_file"
                            },
                            {
                              "$ref": "#/definitions/through_output_stream"
                            },
                            {
                              "$ref": "#/definitions/through_dir"
                            },
                            {
                              "$ref": "#/definitions/through_exit_status"
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  },
  "definitions": {
    "value": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "file"
          ],
          "properties": {
            "file": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "dir"
          ],
          "properties": {
            "dir": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "through_file": {
      "type": "object",
      "required": [
        "file"
      ],
      "properties": {
        "file": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "through_input_stream": {
      "type": "object",
      "required": [
        "stream"
      ],
      "properties": {
        "stream": {
          "type": "string",
          "enum": [
            "STDIN"
          ]
        }
      },
      "additionalProperties": false
    },
    "through_output_stream": {
      "type": "object",
      "required": [
        "stream"
      ],
      "properties": {
        "stream": {
          "type": "string",
          "enum": [
            "STDERR",
            "STDOUT"
          ]
        }
      },
      "additionalProperties": false
    },
    "through_environment": {
      "type": "object",
      "required": [
        "environment"
      ],
      "properties": {
        "environment": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "through_dir": {
      "type": "object",
      "required": [
        "dir"
      ],
      "properties": {
        "dir": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "through_exit_status": {
      "type": "object",
      "properties": {},
      "additionalProperties": false
    }
  }
}