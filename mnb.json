{
  "spec_version": "1.0",
  "description": "Bootstrap mnb spec to build mnb images",
  "actions": [
    {"build_image": {
      "image_name": "mnb-spec-python-bootstrap",
      "context_path": ".",
      "dockerfile_path": "src/mnb-spec/Dockerfile"
    }},
    {"exec": {
      "image_name": "mnb-spec-python-bootstrap",
      "command": ["python3", "mnb-spec.py"],
      "workdir": "context",
      "inputs": [{"value": {"dir": {"path": "."}}, "through": {"dir": {"path": "context"}}}]
    }}
  ]
}
